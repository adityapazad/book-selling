        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>State</th>
                <th>City</th>
                <th>Phone Number</th>
                <th>Is Authorized</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>
