    <div class="col-9">
        <h2 class="text-primary">COMPANY LIST</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-success form-control" asp-action="Upsert">
            <i class="fas fa-plus"></i>&nbsp;
            ADD COMPANY
        </a>
    </div>
</div>

